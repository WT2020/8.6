<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/my_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">
            <TextView
                style="@style/TextTitleStyle"
                android:text="年月" />
            <EditText
                android:enabled="false"
                android:id="@+id/tv_settlement_detail_month_year"
                style="@style/TextValueStyle"
                android:background="@null" />
        </RelativeLayout>
        <include layout="@layout/item_line_horizontal" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">

            <TextView
                style="@style/TextTitleStyle"
                android:text="状态" />

            <EditText
                android:enabled="false"
                android:id="@+id/tv_settlement_detail_state"
                style="@style/TextValueStyle"
                android:background="@null" />
        </RelativeLayout>
        <include layout="@layout/item_line_horizontal" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">

            <TextView
                style="@style/TextTitleStyle"
                android:text="应付金额" />

            <EditText
                android:enabled="false"
                android:id="@+id/tv_settlement_detail_all_money"
                style="@style/TextValueStyle"
                android:background="@null" />
        </RelativeLayout>
        <include layout="@layout/item_line_horizontal" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">

            <TextView
                style="@style/TextTitleStyle"
                android:text="已付金额" />

            <EditText
                android:enabled="false"
                android:id="@+id/tv_settlement_detail_paid_money"
                style="@style/TextValueStyle"
                android:background="@null" />
        </RelativeLayout>
        <include layout="@layout/item_line_horizontal" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">

            <TextView
                style="@style/TextTitleStyle"
                android:text="客户" />

            <EditText
                android:enabled="false"
                android:id="@+id/tv_settlement_detail_people"
                style="@style/TextValueStyle"
                android:background="@null" />
        </RelativeLayout>
        <include layout="@layout/item_line_horizontal" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">

            <TextView
                style="@style/TextTitleStyle"
                android:text="租用天数" />

            <EditText
                android:enabled="false"
                android:id="@+id/tv_settlement_detail_days"
                style="@style/TextValueStyle"
                android:background="@null" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>