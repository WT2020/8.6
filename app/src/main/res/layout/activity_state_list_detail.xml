<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/my_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">

            <TextView
                style="@style/TextTitleStyle"
                android:text="名称" />

            <EditText
                android:enabled="false"
                android:id="@+id/tv_state_list_detail_thing_name"
                style="@style/TextValueStyle"
                android:background="@null"
                android:text="" />
        </RelativeLayout>
        <include layout="@layout/item_line_horizontal" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">

            <TextView
                style="@style/TextTitleStyle"
                android:text="数量" />

            <EditText
                android:enabled="false"
                android:id="@+id/tv_state_list_detail_thing_num"
                style="@style/TextValueStyle"
                android:background="@null"
                android:text="" />
        </RelativeLayout>
        <include layout="@layout/item_line_horizontal" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">

            <TextView
                style="@style/TextTitleStyle"
                android:text="批次" />

            <EditText
                android:enabled="false"
                android:id="@+id/tv_state_list_detail_thing_batch"
                style="@style/TextValueStyle"
                android:background="@null"
                android:text="" />
        </RelativeLayout>
        <include layout="@layout/item_line_horizontal" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">

            <TextView
                style="@style/TextTitleStyle"
                android:text="是否栈板" />

            <EditText
                android:enabled="false"
                android:id="@+id/tv_state_list_detail_thing_is_pallet"
                style="@style/TextValueStyle"
                android:background="@null"
                android:text="" />
        </RelativeLayout>
        <include layout="@layout/item_line_horizontal" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">

            <TextView
                style="@style/TextTitleStyle"
                android:text="仓库" />

            <EditText
                android:enabled="false"
                android:id="@+id/tv_state_list_detail_thing_warehouse"
                style="@style/TextValueStyle"
                android:background="@null"
                android:text="" />
        </RelativeLayout>
        <include layout="@layout/item_line_horizontal" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">

            <TextView
                style="@style/TextTitleStyle"
                android:text="状态" />

            <EditText
                android:enabled="false"
                android:id="@+id/tv_state_list_detail_thing_state"
                style="@style/TextValueStyle"
                android:background="@null"
                android:text="" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>